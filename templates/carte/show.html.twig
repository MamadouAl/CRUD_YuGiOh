                                <i class="fas fa-chart-area me-1"></i>
                                Details de la carte
                            </div>
                            <div class="row">
                            <div class="col-6">
                            <div class="d-flex justify-content-center align-items-center mt-3 mb-5"> 
                           
                               <img src="{{carte.getCarteImage()}}" class="img-fluid rounded-top" alt="">
                                        
                            </div>
                            </div>
                            
                            <div class="col-6">
                            <div class="mt-5">
                                     {# afficher toutes les informations de la carte dans un tableau  #}
                                <table class="table table-bordered table-striped table-hover">
                                    <tr>
                                        <th>Nom</th>
                                        <td>{{carte.getCarteNom()}}</td>
                                    </tr>
                                    <tr>
                                        <th>Categorie</th>
                                        <td>{{carte.getCarteCategorie()}}</td>
                                    </tr>
                                    <tr>
                                        <th>Attribut</th>
                                        <td>{{carte.getCarteAttribut()}}</td>
                                    </tr>
                                    <tr>
                                        <th>Type</th>
                                        <td>{{carte.getCarteType()}}</td>
                                    </tr>
                                    <tr>
                                        <th>Niveau</th>
                                        <td>{{carte.getCarteNiveau()}}</td>
                                    </tr>
                                    <tr>
                                        <th>Specificite</th>
                                        <td>{{carte.getCarteSpecificite()}}</td>
                                    </tr>
                                    <tr>
                                        <th>ATK</th>
                                        <td>{{carte.getCarteATK()}}</td>
                                    </tr>
                                    <tr>
                                        <th>DEF</th>
                                        <td>{{carte.getCarteDEF()}}</td>
                                    </tr>
                                    
                                    </table>

                            </div>
                            </div>
                            <table class="table table-bordered table-striped table-hover">
                            <tr>
                                        <th>Description</th>
                                        <td>{{carte.getCarteDescription()}}</td>
                                    </tr>
                            </table>
                           
                            
                     

                      {# <img
                        src="{{carte.getCarteImage()}}"
