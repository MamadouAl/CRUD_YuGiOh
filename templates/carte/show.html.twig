{% extends 'base.html.twig' %}
{% block title %}details{% endblock %}

{% block body %}
    
 <div id="layoutSidenav">
            
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">DETAILS DE LA CARTES</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="index.html">collection</a></li>
                            <li class="breadcrumb-item"><a href="index.html">cartes</a></li>
                            <li class="breadcrumb-item active">{{carte.getCarteNom()}}</li>
                        </ol>
                        <div class="card mb-4">
                            <div class="card-body">
                               
                            </div>
                        </div>
                        {# separer la colonne en dux l'un 5 l'autre 7 ne rien mettre dedans #}
                      
