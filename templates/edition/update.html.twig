{# templates/edition/update.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mettre à jour une édition{% endblock %}

{% block body %}
<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">EDITIONS</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">Collection</a></li>
                    <li class="breadcrumb-item "><a href="{{ path('editions') }}"> Editions</a></li>
                    <li class="breadcrumb-item active">Mis à jour</li>
                </ol>

                <div class="card mb-4">
                    <div class="card-body">
                        <h1>Mettre à jour une édition</h1>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.nom_edition) }}
                            {{ form_widget(form.nom_edition, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_edition) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.date_edition) }}
                            {{ form_widget(form.date_edition, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_edition) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
            </div>
        </main>

    </div>
</div>
{% endblock %}
